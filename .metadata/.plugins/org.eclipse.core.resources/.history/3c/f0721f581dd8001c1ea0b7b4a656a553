package com.checkoutjourney;

import static io.github.bonigarcia.wdm.WebDriverManager.chromedriver;
import static variables.Configuration.BASE_URL;

import java.time.Duration;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import Utils.JavaScriptHelper;
import pages.BookingSeatPlanPage;
import pages.SearchPage;

public class UI_TESTS {

	public WebDriver driver;
	

	@BeforeMethod
	public void SetUpClass() {

		chromedriver().setup();
		driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
        driver.manage().deleteAllCookies();
        driver.manage().window().maximize();
        driver.get(BASE_URL);
        JavaScriptHelper javaScriptHelper = new JavaScriptHelper(driver);
		javaScriptHelper.waitUntilPageLoaded();
	}
	
	
	
	@Test
	public void SearchShow(){

		SearchPage searchPage = new SearchPage(driver);
		searchPage.SearchShow("TINA-The Tina Turner");
		searchPage.SelectShow();
		searchPage.ClickFindTickets();
		
		BookingSeatPlanPage bookingseatplanPage = new BookingSeatPlanPage(driver);
		//bookingseatplanPage.SelectDate("May 20, 2022");
		bookingseatplanPage.ClickGetTickets();

    }

	@AfterMethod
	public void tearDown() {
		// close and quit the browser
		//driver.quit();
	}

}
