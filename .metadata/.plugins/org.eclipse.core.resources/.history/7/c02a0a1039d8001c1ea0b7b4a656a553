	@Test
	public void SearchShow(){

		SearchPage searchPage = new SearchPage(driver);
		
		searchPage.SearchShow("TINA-The Tina Turner");
		logger.log(LogStatus.INFO, "Searching Show TINA-The Tina Turner");
		javaScriptHelper.waitUntilPageLoaded();
		searchPage.SelectShow();
		logger.log(LogStatus.INFO, "Selecting the Show TINA-The Tina Turner");
		searchPage.ClickFindTickets();
		logger.log(LogStatus.INFO, "Clicking FindTickets Button");
		BookingSeatPlanPage bookingseatplanPage = new BookingSeatPlanPage(driver);
		bookingseatplanPage.SelectDate("May 20, 2022");
		logger.log(LogStatus.INFO, "Selecting the Date from Calender");
		bookingseatplanPage.SelectPerformance("19:30");
		logger.log(LogStatus.INFO, "Selecting the Performance Time from Available Times");
		bookingseatplanPage.ClickGetTickets();
		logger.log(LogStatus.INFO, "Clicking GetTickets Button");

