package Utils;

import static io.restassured.RestAssured.given;
import static variables.Configuration.BASE_API_URL;

import io.restassured.RestAssured;
import io.restassured.http.ContentType;
import io.restassured.response.ValidatableResponse;

public class InventoryService {

	public static ValidatableResponse getCheckOutJourney(String StartDate, String EndDate) {

		RestAssured.baseURI = BASE_API_URL;
		ValidatableResponse response=  given().contentType(ContentType.JSON).header("affiliateId", "encoretickets") .when().get("quantity/2/from/"+StartDate+"/to/"+EndDate+"?test=98").then().log()
	      .body();
		return response;

	}
	
	public static ValidatableResponse getAreas(String date, String time) {

		RestAssured.baseURI = BASE_API_URL;
		ValidatableResponse response=  given().contentType(ContentType.JSON).header("affiliateId", "encoretickets") .when().get("areas?date="+date+"&time=1930&quantity=2&includeSeatsAttributes=true").then().log()
	      .body();
		return response;

	}

}
