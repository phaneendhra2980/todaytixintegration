package tests;

import org.openqa.selenium.WebDriver;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import com.relevantcodes.extentreports.ExtentReports;
import com.relevantcodes.extentreports.ExtentTest;
import com.relevantcodes.extentreports.LogStatus;

import pages.BookingSeatPlanPage;
import pages.SearchPage;
import utils.JavaScriptHelper;
import utils.TestBase;

public class BookTicketJourneyUITests  extends TestBase {

	public WebDriver driver;
	JavaScriptHelper javaScriptHelper;
	static ExtentTest extentTest;
	static ExtentReports report;
	SearchPage searchPage ;
	BookingSeatPlanPage bookingseatplanPage ;
	
	public BookTicketJourneyUITests()
	{
		super();
	}
	
	@BeforeMethod
	public void setUp() throws InterruptedException {
		
		initialization();		
		searchPage = new SearchPage();
		bookingseatplanPage = new BookingSeatPlanPage();
		
		
	}

	
	
	
	@Test
	public void SearchShow(){

			
		searchPage.SearchShow("TINA-The Tina Turner");
		extentTest.log(LogStatus.INFO, "Searching Show TINA-The Tina Turner");
		javaScriptHelper.waitUntilPageLoaded();
		searchPage.SelectShow();
		extentTest.log(LogStatus.INFO, "Selecting the Show TINA-The Tina Turner");
		searchPage.ClickFindTickets();
		extentTest.log(LogStatus.INFO, "Clicking FindTickets Button");
		
		bookingseatplanPage.SelectDate("22");
		extentTest.log(LogStatus.INFO, "Selecting the Date from Calender");
		bookingseatplanPage.SelectPerformance("15:00");
		extentTest.log(LogStatus.INFO, "Selecting the Performance Time from Available Times");
		bookingseatplanPage.ClickGetTickets();
		extentTest.log(LogStatus.INFO, "Clicking GetTickets Button");

    }

	

	
}
